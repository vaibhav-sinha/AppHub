<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.adobe.apphub.Fragments.ProductDetailsFragment">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:text="AppHub"
            android:textSize="30sp"
            android:textColor="#00639e"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"/>

        <TextView
            android:text="Product Details"
            android:textSize="30sp"
            android:textColor="#83be29"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">

        <ImageView
            android:id="@+id/pdIcon"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="140dp"
            android:layout_height="140dp" />

        <TextView
            android:id="@+id/pdName"
            android:text="Adobe Product"
            android:textSize="26sp"
            android:paddingBottom="30dp"
            android:layout_toRightOf="@+id/pdIcon"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/pdStar"
            android:src="@android:drawable/btn_star_big_on"
            android:layout_below="@+id/pdName"
            android:layout_toRightOf="@+id/pdIcon"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/pdRating"
            android:layout_toRightOf="@+id/pdStar"
            android:layout_below="@+id/pdName"
            android:textSize="28sp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingTop="6dp"
            android:text="4.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/pdDescription"
            android:layout_below="@+id/pdIcon"
            android:paddingTop="20dp"
            android:text="Sample description"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TableLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:text="Type"
                android:textSize="20sp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/pdType"
                android:text="Unknown"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="40dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:text="In-app purchase"
                android:textSize="20sp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/pdIAP"
                android:text="Unknown"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="40dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:text="Last Updated"
                android:textSize="20sp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/pdDate"
                android:text="Unknown"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="40dp" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/pdStore"
                android:text="App Store"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/pdShare"
                android:text="Share"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/pdBack"
                android:text="Back"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/pdSms"
                android:text="SMS"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
